<%= form_with(model: @course, local: true) do |f| %>
  <%= render 'shared/error_messages', object: @course %>

  <%= f.label :course %>
  <%= f.text_field :course_no, class: 'form-control' %>

  <%= f.label :semester %>
  <%= f.text_field :semester, class: 'form-control' %>

 
    <%= f.label "Instructor and teaching assistants" %>
    <div class="multi-selection">
    <%= f.collection_check_boxes :user_ids, User.all, :id, :name do |b| %>
      <div class="collection-check-box">
        <table><tr>
        <td><%= b.check_box %></td>
        <td><%= b.label %></td>
        </tr></table>
      </div>
    <% end %>
    </div>
</div>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>